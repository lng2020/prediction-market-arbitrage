# Kalshi API credentials
KALSHI_API_KEY_ID=your_kalshi_api_key_id
KALSHI_PRIVATE_KEY_PATH=path/to/kalshi_private_key.pem
KALSHI_ENV=demo  # demo or prod

# Polymarket credentials
POLYMARKET_PRIVATE_KEY=your_ethereum_private_key
POLYMARKET_FUNDER_ADDRESS=your_wallet_address
POLYMARKET_SIGNATURE_TYPE=0  # 0=EOA, 1=Magic, 2=Browser

# Trading parameters
MIN_PROFIT_TARGET=0.003  # 0.3%
CAPITAL_PER_TRADE=100  # USD
SLIPPAGE_BUFFER=0.005  # 0.5%

# Market categories (comma-separated)
# Phase 1: nba
# Phase 2: nba,nfl,mlb,nhl,soccer (all_sports)
# Phase 3: all_markets
ENABLED_CATEGORIES=nba
